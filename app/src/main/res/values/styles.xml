<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="theme_no_title" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_toolbar_bg</item>
        <item name="colorPrimaryDark">@color/light_toolbar_bg</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimary">@color/light_toolbar_bg</item>
        <item name="colorPrimaryDark">@color/dark_toolbar_bg</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">@color/light_toolbar_bg</item>
        <item name="colorPrimaryDark">@color/dark_toolbar_bg</item>
    </style>

</resources>
